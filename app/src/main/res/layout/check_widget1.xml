<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/h100"
    android:layout_width="220dp"
    android:layout_height="100dp"
    android:background="#A9A6A5A5"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#83FF5722"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/widget_maintext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="#000099CC"
            android:contentDescription="@string/appwidget_text"
            android:text="출석체크"
            android:textColor="#3A1313"
            android:textSize="20dp"
            android:textStyle="bold|italic" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0"
            android:background="#00FFFFFF"
            android:scaleType="centerInside"
            android:src="@drawable/refresh" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:background="#00FFFFFF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/widget_appicon1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="0dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_launcher_background" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/widget_appname1"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:layout_marginLeft="2sp"
                    android:autoSizeTextType="uniform"
                    android:text="app_name"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="25dp"
                        android:layout_height="27dp"
                        android:layout_weight="0"
                        android:scaleType="centerInside"
                        android:src="@android:drawable/presence_online" />

                    <TextView
                        android:id="@+id/widget_timer1"
                        android:layout_width="match_parent"
                        android:layout_height="27dp"
                        android:layout_marginLeft="0dp"
                        android:layout_weight="0"
                        android:autoSizeTextType="uniform"
                        android:text="남은 시간 00:00"
                        android:textColor="#000000"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>